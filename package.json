{
    "name": "@mattstam/solidity-template",
    "version": "0.0.0",
    "description": "A modern Solidity template utilizing Foundry and Hardhat",
    "type": "commonjs",
    "main": "build/scripts/index.js",
    "types": "build/scripts/index.d.ts",
    "keywords": [
        "solidity",
        "template",
        "contracts",
        "protocol",
        "blockchain",
        "ethereum",
        "web3",
        "foundry",
        "forge",
        "hardhat",
        "ethers",
        "typescript"
    ],
    "author": "Solidity Template Contributors",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/mattstam/solidity-template.git"
    },
    "files": [
        "/deployments.json",
        "/artifacts/contracts/**/*.json",
        "!/artifacts/contracts/test/**/*.json",
        "/build/**",
        "/contracts/**/*.sol",
        "!/contracts/test/**/*"
    ],
    "scripts": {
        "build": "npx hardhat compile --quiet",
        "clean": "forge clean; npx hardhat clean; rm -rf coverage.json artifacts/ artifacts-zk/ build/ cache/ cache-zk/ coverage/ example/ node_modules/ types/",
        "coverage": "npx hardhat coverage --solcoverjs ./solcover.js",
        "deploy": "npx hardhat run scripts/console.ts",
        "doc": "npx hardhat dodoc",
        "lint": "npx prettier --config ./.prettierrc.json --check . && npx eslint --no-error-on-unmatched-pattern \"**/*.{ts,tsx}\"",
        "pretty": "npx prettier --config ./.prettierrc.json --write . && npx eslint --no-error-on-unmatched-pattern --fix .",
        "prepare": "npm run build && tsc",
        "size": "npx hardhat size-contracts",
        "test": "npx hardhat test --network hardhat",
        "typechain": "npx hardhat typechain",
        "update": "forge update && npm upgrade",
        "ut": "forge test"
    },
    "devDependencies": {
        "@float-capital/ds-test": "^0.0.1",
        "@matterlabs/hardhat-zksync-deploy": "^0.5.2",
        "@matterlabs/hardhat-zksync-solc": "^0.3.11-beta.1",
        "@nomiclabs/hardhat-ethers": "^2.2.1",
        "@nomiclabs/hardhat-etherscan": "^3.1.4",
        "@nomiclabs/hardhat-solhint": "^3.0.0",
        "@nomiclabs/hardhat-waffle": "^2.0.3",
        "@primitivefi/hardhat-dodoc": "^0.2.3",
        "@rari-capital/solmate": "^6.4.0",
        "@typechain/ethers-v5": "^10.2.0",
        "@typechain/hardhat": "^6.1.5",
        "@types/chai": "^4.3.4",
        "@types/fs-extra": "^9.0.13",
        "@types/mocha": "^10.0.1",
        "@types/node": "^18.11.18",
        "@types/readline-sync": "^1.4.4",
        "@typescript-eslint/eslint-plugin": "^5.48.0",
        "@typescript-eslint/parser": "^5.48.0",
        "chai": "^4.3.7",
        "dotenv": "^16.0.3",
        "eslint": "^8.31.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^4.2.1",
        "ethereum-waffle": "^3.4.4",
        "ethers": "^5.7.2",
        "hardhat": "^2.13.0",
        "hardhat-contract-sizer": "^2.6.1",
        "hardhat-gas-reporter": "^1.0.9",
        "hardhat-tracer": "^1.2.1",
        "mocha": "^10.2.0",
        "prettier": "^2.8.2",
        "prettier-plugin-solidity": "^1.1.1",
        "readline-sync": "^1.4.10",
        "solhint-plugin-prettier": "^0.0.5",
        "solidity-coverage": "^0.8.2",
        "toml": "^3.0.0",
        "ts-node": "^10.9.1",
        "typechain": "^8.1.1",
        "typescript": "^5.0.4"
    }
}
